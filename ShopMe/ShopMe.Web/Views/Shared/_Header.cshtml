                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="login_box">
                                            <div class="login_box_inner">

                                                <a href="#">
                                                    @*@if (User.Identity.GetUserName().Length > 15)
                                                        {
                                                            @User.Identity.GetUserName().Substring(0, 11);
                                                        }
                                                        else
                                                        {
                                                            @User.Identity.GetUserName();
                                                        }*@
