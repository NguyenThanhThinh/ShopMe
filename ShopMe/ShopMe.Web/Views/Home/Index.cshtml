<link href="~/Content/index-home.css" rel="stylesheet"/>

<div class="container">

<div class="section_offset">

    <div class="row">
        @Html.Action("_Slider", "Home")


    </div>

</div>

<section class="section_offset animated transparent lastest__product" data-animation="fadeInDown">

    <h3 class="offset_title section_title section_title1">
        <a href="#" class="section__lable"> Sản phẩm mới</a>
    </h3>

    <div class="tabs type_3 products">
        <div class="tab_containers_wrap">
            <div class="owl_carousel carousel_in_tabs type_3">


                @foreach (var item in Model.LastestProducts)
                {
                    var url = "/" + item.Alias + ".sp-" + item.ProductID + ".html";
                    <div class="product_item">


                        <div class="image_wrap">
                            <img src="@item.Image"/>


                            <div class="actions_wrap">

                                <div class="centered_buttons">

                                    <a href="@url" class="button_dark_grey middle_btn quick_view pb">Xem chi tiết</a>

                                </div><!--/ .centered_buttons -->

                            </div><!--/ .actions_wrap-->
                            <!-- - - - - - - - - - - - - - End of product actions - - - - - - - - - - - - - - - - -->

                        </div><!--/. image_wrap-->
                        <!-- - - - - - - - - - - - - - End thumbnail - - - - - - - - - - - - - - - - -->
                        <!-- - - - - - - - - - - - - - Label - - - - - - - - - - - - - - - - -->

                        <div class="label_new">

                            <div>Mới</div>

                        </div>


                        <div class="description align_center">

                            <p>
                                <a href="@url">@item?.Name</a>
                            </p>

                            <div class="clearfix product_info">

                                <!-- - - - - - - - - - - - - - Product rating - - - - - - - - - - - - - - - - -->
                                <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>
                                <div class="rating alignright">
                                    @if (item.ProductRating > 0 && item.ProductRating != 0)
                                    {
                                        var Mark = (double) item.ProductRating; //2.7
                                        var SoTron = Mark - Mark % 1; //2
                                        var SoDu = 5 - SoTron; //3
                                        var SoDu_SaoRong = Math.Round(SoDu); //3
                                        if (Mark % 1 >= 0.5)
                                        {
                                            SoDu_SaoRong = SoDu_SaoRong - 1;
                                        }
                                        var SoDu_NuaSao = SoDu - Math.Round(SoDu_SaoRong);
                                        if (Mark > 0)
                                        {
                                            for (var f = 1; f <= SoTron; f++)
                                            {
                                                <i class="fa fa-star"></i>
                                            }
                                            for (var f = 1; f <= SoDu_NuaSao; f++)
                                            {
                                                <i class="fa fa-star-half-o"></i>
                                            }
                                            for (var f = 1; f <= SoDu_SaoRong; f++)
                                            {
                                                <i class="fa fa-star-o"></i>
                                            }
                                            <span class="likes ml+">@item.ViewRating (đánh giá)</span>
                                        }
                                    }
                                    else
                                    {
                                        <p class="review" style="text-align: left;">Chưa có nhận xét</p>
                                    }



                                </div>

                                <!-- - - - - - - - - - - - - - End product rating - - - - - - - - - - - - - - - - -->

                                <p class="product_price alignleft">

                                    <b>@item.Price.ToString("N0")</b>
                                </p>

                            </div><!--/ .clearfix.product_info-->

                            <button class="button_blue middle_btn btnAddCart" data-id="@item.ProductID">Mua Hàng</button>

                        </div>

                        <!-- - - - - - - - - - - - - - End of product description - - - - - - - - - - - - - - - - -->

                    </div>
                }


            </div>
        </div>


    </div>

