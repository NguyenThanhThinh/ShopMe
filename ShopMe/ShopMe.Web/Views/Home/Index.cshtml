                @foreach (var item in Model.ProductBrandDM)
                {
                    var url = "/" + item.Alias + ".sp-" + item.ProductID + ".html";
                    <div class="product_item">

                        <!-- - - - - - - - - - - - - - Thumbnail - - - - - - - - - - - - - - - - -->

